%article
  - if @item[:title]
    %h1
      - if @item[:url]
        %a{href: @item[:url]}= h @item[:title]
      - else
        = h @item[:title]
  = @item.compiled_content
  %footer
    %dl
      %dt Posted
      %dd
        %a{href: @item.path, rel: 'bookmark', title: 'Permanent link to this post'}
          %time{datetime: @item[:created_at].strftime('%FT%T%:z')}= @item[:created_at].strftime('%B %-d, %Y')

      - if @item[:tags]
        %dt Tagged
        %dd
          %ul
            - @item[:tags].each do |tag|
              %li= %{\#<a href="/blog/tags/#{tag}.html" rel="tag" title="All posts tagged \##{tag}">#{tag}</a>}
